def sigmoid(z):
    # Input: 
    # z : scalar or array of dimension n 
    # Output:
    # sgmd: scalar or array of dimension n
    
    # YOUR CODE HERE
    sgmd = 1 / (1 + np.exp(-z))
    
    return sgmd




